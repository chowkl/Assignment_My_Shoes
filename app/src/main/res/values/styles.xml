<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary2</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="SplashTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowBackground">@drawable/splash_activity_background</item>
    </style>
    <style name="PlusButtons" >
        <item name="android:src">@drawable/add</item>
        <item name="android:contentDescription">
        </item>
    </style>

    <style name="MinusButtons" >
        <item name="android:src">@drawable/minus</item>
        <item name="android:contentDescription">
        </item>
    </style>

    <style name="CancelButtons" >
        <item name="android:src">@drawable/cancel</item>
        <item name="android:contentDescription">
        </item>
    </style>

</resources>